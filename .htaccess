<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # ----------------------------------------------------------------------
  # VALIDATION: HOSTINGER / LITESPEED MOBILE FIX
  # ----------------------------------------------------------------------
  # Disable LiteSpeed Cache for this site to prevent mobile blank screen/caching issues
  <IfModule LiteSpeed>
    CacheDisable public /
    RewriteRule .* - [E=Cache-Control:no-cache]
  </IfModule>

  # Disable mod_pagespeed to prevent JS conflicts
  <IfModule pagespeed_module>
    ModPagespeed off
  </IfModule>

  # ----------------------------------------------------------------------
  # ROUTING LOGIC (SPA)
  # ----------------------------------------------------------------------
  
  # If the requested file or directory exists, serve it directly
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # All other requests should be rewritten to index.html
  RewriteRule ^ index.html [L]

</IfModule>

# Force no-cache for HTML to ensure users always get the latest version
<FilesMatch "\.(html|htm)$">
  Header set Cache-Control "max-age=0, no-cache, no-store, must-revalidate"
  Header set Pragma "no-cache"
  Header set Expires "Wed, 11 Jan 1984 05:00:00 GMT"
</FilesMatch>
